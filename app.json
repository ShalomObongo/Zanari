{
  "expo": {
    "name": "Zanari2",
    "slug": "zanari2",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#2196F3",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zanari.zanari2",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to capture KYC documents and selfies for identity verification.",
        "NSFaceIDUsageDescription": "Use Face ID for secure app authentication."
      }
    },
    "android": {
      "package": "com.zanari.zanari2",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.USE_FINGERPRINT", 
        "android.permission.USE_BIOMETRIC"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-local-authentication",
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "zanari2-expo-project"
      }
    }
  }
}