{
  "expo": {
    "name": "Zanari",
    "slug": "zanari2",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/branding/icon.png",
    "scheme": "zanari",
    "splash": {
      "backgroundColor": "#2196F3",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zanari.zanari2",
      "icon": "./assets/branding/icon.png",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to capture KYC documents and selfies for identity verification.",
        "NSFaceIDUsageDescription": "Zanari uses Face ID to securely authenticate you and authorize payments without entering your PIN."
      }
    },
    "android": {
      "package": "com.zanari.zanari2",
      "icon": "./assets/branding/icon.png",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.USE_FINGERPRINT", 
        "android.permission.USE_BIOMETRIC"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/branding/icon.png"
    },
    "plugins": [
      "expo-local-authentication",
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "zanari2-expo-project"
      }
    }
  }
}
